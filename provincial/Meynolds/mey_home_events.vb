	act 'Надеть купальник':
		cla
		minut += 5
		gs 'zz_clothing', 'redress', 2
		flag_tanga = tanga
		tanga = 0
		gs 'zz_render','','','Хоть уютный дворик и закрыт от посторонних глаз, но вы всё же решили надеть купальник.'
