if $args[0] = 'redress':
	act 'Переодеться':
		cla
		if current_clothing > 2:
			act 'Снять все':
				cla
				minut += 5
				flag_tanga = tanga
				tanga = 0
				gs 'zz_clothing', 'redress', 0
				gs 'zz_render','','','Уютный дворик скрыт от посторонних глаз, так что без толики стеснения вы раздеваетесь догола - тут стесняться некого.'
				act '...': gt 'mey_home', 9
			end
			gs 'mey_home_events','redress_swimsuit'
		else
			if current_clothing ! 2: gs 'mey_home_events','redress_swimsuit'
			act 'Одеться': gs 'mey_home_events','cloth_on'
		end
	end
