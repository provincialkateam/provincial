	else
		manna += rand(10,20)
		minut += rand(30,60)
		gs 'zz_render','','','Немного помечтав, вы с большой неохотой все же решаете вернуться к делам насущным.'
	end
	gs 'stat'
	act '...': gt 'mey_home', 4
