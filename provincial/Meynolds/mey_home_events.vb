if $args[0] = 'go_out_no_key':
	act '<b>Уйти</b>':
		if current_clothing < 3:
			*clr & cla
			gs 'zz_render','','images/clothing/tanga.jpg','<red>Вам надо одеться!</red>'
			act 'OK': gt 'loker'
			exit
		else
			minut += rand(10,15)
			gt 'gorodok'
		end
	end
end
! никого нет дома
if $args[0] = 'no_home':
	*clr & cla
	gs 'zz_render','','pavlovo/meynolds/tamara/meeting/tea0', iif(hour < 10 or hour > 20,$_str[0],$_str[1]+$_str[2])
	killvar '$_str'
	act 'Уйти':
		minut += 10
		gs 'zz_render','','','Вы уходите в город, так как никого нет дома.'
		gt 'gorodok'
	end
