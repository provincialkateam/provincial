if $args[0] = 'babushki':
	*clr & cla
	gs 'zz_render','','', '\\- День добрый!, -// говорите вы сидящим на скаймеке бабулям.'
	if func('zz_reputation','get') = 0:
		gs 'zz_render','','', '\\\- Здраствуй, <<$name[3]>>. Как дела у твоей мамы?, -/// вежливо интересуются они.**\\- Всё хорошо, спасибо, -// отвечаете вы им.**\\\- Хорошая ты девочка, прям пример для многих, -/// улыбаются они.'
	elseif func('zz_reputation','get') > 0 and func('zz_reputation','get') <= 2:
		gs 'zz_render','','', '\\\- Ну здраствуй, <<$name>>, -/// бабка моршится когда произносит ваше имя, словно съела кислую ягоду.'
		if babushki_month ! month:
			act 'Предложить пирожки':
				*clr & cla
				babushki_month = month
				gs 'zz_reputation','decrease',5
				minut += 60
				gs 'stat'
				gs 'zz_render','','', '\\- Решила вам предложить пирожков с клубникой. Сама испекла!, -// предлогаете вы бабушкам свои пирожки.**Бабки съели ваши пирожки и немного улыбнулись вам. Может немного улучшится молва о ваших похождениях в городе.'
				act 'Отойти': gt $loc,$metka
			end
		end
	else
		gs 'zz_render','','','Бабки даже не смотрят в вашу сторону. Видно что для них вы не интересны. Похоже, что рассказы о ваших похождениях сделали вас дьяволом во плоти для них, и общения не получится.'
	end
	act 'Уйти': gt $loc,$metka
end